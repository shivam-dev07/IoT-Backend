      pressure: 'text-purple-500',
    };
    return colors[type?.toLowerCase()] || 'text-green-500';
  };

  const filteredData = selectedType === 'all'
    ? sensorData
    : sensorData.filter((d) => d.type?.toLowerCase() === selectedType);

  const chartDataByType = {};
  chartData.forEach((item) => {
    const type = item.type?.toLowerCase() || 'unknown';
    if (!chartDataByType[type]) {
      chartDataByType[type] = [];
    }
    chartDataByType[type].push(item);
  });

  return (
    <div className="space-y-6">
      {/* Header */}
      <div>
        <h1 className="text-3xl font-bold text-white">Real-Time Data Visualization</h1>
        <p className="text-slate-400 mt-1">Monitor live sensor data from your devices</p>
      </div>

      {/* Filter */}
      <div className="card">
        <div className="flex gap-3 flex-wrap">
          <button
            onClick={() => setSelectedType('all')}
            className={`px-4 py-2 rounded-lg font-medium transition-colors ${
              selectedType === 'all'
                ? 'bg-primary-600 text-white'
                : 'bg-slate-700 text-slate-300 hover:bg-slate-600'
            }`}
          >
            All Types
          </button>
          <button
            onClick={() => setSelectedType('temperature')}
            className={`px-4 py-2 rounded-lg font-medium transition-colors ${
              selectedType === 'temperature'
                ? 'bg-red-600 text-white'
                : 'bg-slate-700 text-slate-300 hover:bg-slate-600'
            }`}
          >
            Temperature
