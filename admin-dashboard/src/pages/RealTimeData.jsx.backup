    // Fetch initial sensor data
    fetchInitialData();

    // Listen for real-time sensor data
    const handleSensorData = (data) => {
      const newData = {
        ...data,
        timestamp: new Date(data.timestamp).toLocaleTimeString(),
        numericValue: parseFloat(data.value),
      };

      // Add to recent data list
      setSensorData((prev) => [newData, ...prev].slice(0, 50));

      // Add to chart data
      setChartData((prev) => {
        const updated = [...prev, newData].slice(-20);
        return updated;
      });
    };

    wsService.on('sensor_data', handleSensorData);

    return () => {
      wsService.off('sensor_data', handleSensorData);
    };
  }, []);

  const getIcon = (type) => {
    const icons = {
      temperature: Thermometer,
      humidity: Droplets,
      pressure: Wind,
    };
    const Icon = icons[type?.toLowerCase()] || Activity;
    return <Icon className="h-5 w-5" />;
  };

  const filteredData = sensorData.filter((d) => {
    // Filter by type
    const matchesType = selectedType === 'all' || d.type?.toLowerCase() === selectedType;
    
    // Filter by gateway (check gateway_id or extract from source_id)
    const matchesGateway = selectedGateway === 'all' || d.gateway_id === selectedGateway;
    
    // Filter by node (check source_id which contains MAC address)
    const matchesNode = selectedNode === 'all' || d.source_id === selectedNode;
    
    // Filter by date range
    const matchesDate = (() => {
      if (!startDate && !endDate) return true;
      const itemDate = new Date(d.fullTimestamp);
      const start = startDate ? new Date(startDate) : null;
      const end = endDate ? new Date(endDate + 'T23:59:59') : null;
      
      if (start && end) return itemDate >= start && itemDate <= end;
      if (start) return itemDate >= start;
      if (end) return itemDate <= end;
      return true;
    })();
    
    return matchesType && matchesGateway && matchesNode && matchesDate;
  });

  const exportToJSON = () => {
    const dataToExport = filteredData.map((item) => ({
      gateway_id: item.gateway_id,
      source_id: item.source_id,
      data_type: item.type,
      value: item.value,
      unit: item.unit,
      timestamp: item.fullTimestamp,
      rssi: item.rssi,
    }));

    const dataStr = JSON.stringify(dataToExport, null, 2);
    const dataUri = 'data:application/json;charset=utf-8,' + encodeURIComponent(dataStr);
    const exportFileDefaultName = `sensor-data-${new Date().toISOString().split('T')[0]}.json`;

    const linkElement = document.createElement('a');
    linkElement.setAttribute('href', dataUri);
    linkElement.setAttribute('download', exportFileDefaultName);
    linkElement.click();
  };
