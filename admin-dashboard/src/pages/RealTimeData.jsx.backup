      )}

      {/* Recent Data Feed */}
      <div className="card">
        <div className="flex items-center justify-between mb-4">
          <h2 className="text-xl font-semibold text-white">Live Data Feed</h2>
          <div className="flex items-center gap-2">
            <div className="h-2 w-2 bg-green-500 rounded-full animate-pulse"></div>
            <span className="text-sm text-slate-400">Live</span>
          </div>
        </div>

        <div className="space-y-3 max-h-96 overflow-y-auto">
          {filteredData.length > 0 ? (
            filteredData.map((data, index) => (
              <div
                key={index}
                className="bg-slate-900 p-4 rounded-lg flex items-center justify-between border-l-4"
                style={{
                  borderColor: getColor(data.type).replace('text-', 'rgb(var(--color-') + '))',
                }}
              >
                <div className="flex items-center gap-4">
                  <div className={`${getColor(data.type)}`}>{getIcon(data.type)}</div>
                  <div>
                    <p className="text-white font-medium">{data.device_id || data.mac_address}</p>
                    <p className="text-slate-400 text-sm capitalize">{data.type}</p>
                  </div>
                </div>
                <div className="text-right">
                  <p className={`text-2xl font-bold ${getColor(data.type)}`}>
                    {data.value} {data.unit || ''}
                  </p>
                  <p className="text-slate-500 text-xs">{data.timestamp}</p>
                </div>
              </div>
            ))
          ) : (
            <div className="text-center py-12">
              <Activity className="h-12 w-12 text-slate-600 mx-auto mb-3" />
              <p className="text-slate-400">No live data available</p>
              <p className="text-slate-500 text-sm mt-1">
                Data will appear here as devices send updates
              </p>
            </div>
          )}
        </div>
      </div>
    </div>
  );
};

export default RealTimeData;
